#!/bin/bash

# Installation script for betang

# Download the main script with some cool effects
echo -e "\033[1;32mDownloading the main script...\033[0m"
curl -s -o ~/betang.sh https://raw.githubusercontent.com/robertneed20k/betang/main/betang.sh

# Make the script executable
echo -e "\033[1;32mMaking the script executable...\033[0m"
chmod +x ~/betang.sh

# Move the script to a directory in $PATH
echo -e "\033[1;32mMoving the script to a directory in \$PATH...\033[0m"
mv ~/betang.sh /data/data/com.termux/files/usr/bin/betang

# Inform the user that betang has been successfully installed with a cool message
echo -e "\033[1;32mCongratulations! betang has been successfully installed! ðŸŽ‰\033[0m"

# Provide simplified instructions with a fun emoji
echo -e "\033[1;32mTo start, simply type 'betang' in your terminal.\033[0m"
