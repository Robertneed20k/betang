#!/bin/bash

# Installation script for betang

# Download the main script
curl -s -o ~/betang.sh https://raw.githubusercontent.com/robertneed20k/betang/main/betang.sh

# Make the script executable
chmod +x ~/betang.sh

# Inform the user that betang has been successfully installed
echo "betang has been successfully installed!"

# Provide instructions on how to run the script
echo "To start using betang, simply type 'betang' in your terminal."
